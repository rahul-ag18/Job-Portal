<section id="job-details">
  <div id="main" class="container rounded border p-0 mt-1">
    <div class="border poster">
      <img src="/images/jobposter.png" />
    </div>
    <div class="fs-1 font-weight-lighter mt-2">
      <center>
        <span class="red"> <%= jobDetail.role %></span
        ><span class="green"> opportunity in <%= jobDetail.location %> at</span
        ><span class="sky-blue"> <%= jobDetail.company %></span>
      </center>
    </div>

    <% if(locals.userEmail){ %>
    <div>
      <div
        class="card-title card-title-class p-1 d-inline-block rounded ms-4 mb-4 bg-color-yellow"
      >
        Actively hiring &nbsp;<i class="fa fa-line-chart card-title-logo"></i>
      </div>
      <a href="/updateJob/<%= jobDetail.id %>" class="ms-3" style="color: blue"
        ><i class="fa-solid fa-pen-to-square"></i
      ></a>
      <a href="/deleteJob/<%= jobDetail.id %>" class="ms-2 red"
        ><i class="fa-regular fa-trash-can"></i
      ></a>
    </div>
    <% } %>

    <div class="ms-4">
      <h5 class="font-weight-lighter"><%= jobDetail.company %></h5>
      <h6 class="font-weight-lighter">
        <%= jobDetail.type %> <span class="green"><%= jobDetail.role %></span>
      </h6>
      <div>
        <div class="ms-3 font-weight-lighter">
          <i class="fas fa-map-pin"></i><span> <%= jobDetail.location %></span>
          <br />
          <i class="fa-solid fa-indian-rupee-sign"></i
          ><span> <%= jobDetail.salary %></span> <br />
          <i class="fa-regular fa-hourglass-half"></i
          ><span> <%= jobDetail.date %></span> <br />
          <i class="fa-solid fa-bell"></i
          ><span> Number of openings: <%= jobDetail.positions %></span> <br />
          <i class="fa-solid fa-user-group red"></i
          ><a
            href="/getApplicants/<%= jobDetail.id %>"
            class="text-decoration-none"
            ><span class="red">
              Applicants: <%= jobDetail.applicants %></span
            ></a
          >
          <br />
        </div>
        <div id="skills" class="mt-3 ms-4">
          <% if (Array.isArray(jobDetail.skill)) { %>
          <ul class="d-flex flex-wrap gap-0.5 list-group list-group-horizontal">
            <% jobDetail.skill.forEach((s) => { %>
            <li class="list-group-item rounded skill-list"><%= s %></li>
            <% }) %>
          </ul>
          <% }else { %>
          <ul class="d-flex flex-wrap gap-0.5 list-group list-group-horizontal">
            <li class="list-group-item rounded skill-list">
              <%= jobDetail.skill %>
            </li>
          </ul>
          <% } %>
        </div>

        <% if (!locals.userEmail) { %>
        <button
          type="button"
          class="btn btn-primary mt-2 ms-4 font-weight-lighter"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Apply Now
        </button>

        <% } %>

        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="text-center mt-1 mb-2 font-weight-lighter green">
                  easily
                </h4>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div
                class="modal-body container p-3 mx-auto w-75 form-box my-5 rounded-md"
              >
                <div>
                  <h3 class="mb-3 font-weight-lighter mx-auto">
                    Apply in less than 1 minute
                  </h3>
                </div>

                <form
                  action="/apply/<%= jobDetail.id %>"
                  method="post"
                  enctype="multipart/form-data"
                >
                  <div class="input-group mb-3">
                    <span class="input-group-text" id="name">Name</span>
                    <input
                      type="text"
                      class="form-control font-weight-lighter"
                      placeholder="Enter your name"
                      aria-label="name"
                      aria-describedby="name"
                      name="name"
                      required
                    />
                  </div>
                  <div class="input-group mb-3">
                    <span class="input-group-text" id="company-name"
                      >Email</span
                    >
                    <input
                      type="email"
                      class="form-control font-weight-lighter"
                      placeholder="Enter your email"
                      aria-label="email"
                      aria-describedby="email"
                      name="email"
                      required
                    />
                  </div>
                  <div class="input-group mb-3">
                    <span class="input-group-text" id="company-name"
                      >Contact</span
                    >
                    <input
                      type="number"
                      class="form-control font-weight-lighter"
                      placeholder="+91 _ _ _ _ _  _ _ _ _ _"
                      aria-label="contact-num"
                      aria-describedby="contact-num"
                      name="contact"
                      required
                    />
                  </div>
                  <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupFile01"
                      >Resume</label
                    >
                    <input
                      type="file"
                      class="form-control font-weight-lighter"
                      id="inputGroupFile01"
                      name="resume"
                      required
                    />
                  </div>
                  <button
                    type="submit"
                    class="d-grid gap-2 mx-auto col-12 btn btn-success mb-2"
                  >
                    Submit
                  </button>
                </form>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div>
        <span
          class="badge text-bg-success font-weight-lighter mt-3 ms-3 mb-2"
          style="font-size: 0.9rem"
          >Posted: 8/7/2024, 6:23:31 PM</span
        >
      </div>
    </div>
  </div>
</section>
